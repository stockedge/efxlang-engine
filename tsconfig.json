{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "e2e/**/*",
    "vite.browser.config.ts",
    "playwright.config.ts"
  ],
  "exclude": ["node_modules"]
}
